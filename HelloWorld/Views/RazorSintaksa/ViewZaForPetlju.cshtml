@model string
@{
    ViewBag.Title = "ViewZaForPetlju";
}

<h2>ViewZaForPetlju</h2>

<hr />
<hr3>Ispis uz pomoć petlje foreach</hr3>

<ul>
@foreach (var item in Model)
{
    <li> @item </li>
}
</ul>

<hr />
<hr3>Ispis uz pomoć petlje for</hr3>

<ul>
@for (int i = 0; i < Model.Length; i++)
{
    <li>@Model[i];</li>
}
</ul>

<hr />
<hr3>Ispis uz pomoć petlje while</hr3>

@{ 
    int j = Model.Length-1;
}
<ul>
    @while (j>=0)
    {
        <li>@Model[j];</li>
        j--;
    }
</ul>

<hr />
<hr3>Ispis uz pomoć petlje while UNAPRIJED</hr3>

@{
    int k = 0;
}
<ul>
    @while (k < Model.Length)
    {
        <li>@Model[k];</li>
        k++;
    }
</ul>

