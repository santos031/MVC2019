@model HelloWorld.Models.Osoba
@{
    ViewBag.Title = "EditorModelView";
}

<h2>EditorModelView</h2>

<style>
    label {
        display: inline-block;
        width: 150px;
        font-weight: bold;
    }
    .editor-label {
        clear: left;
        float: left;
        margin-top: 10px;
    }
    .editor-field {
        float: left;
        margin-top: 10px;
        margin-left: 10px;
    }
    input[type=submit] {
        float: left;
        clear: both;
        margin-top: 10px;
    }
</style>

<div>
    @using (Html.BeginForm())
    {
        @Html.EditorForModel()
        <input type="submit" value="Pošalji" />
    }
</div>