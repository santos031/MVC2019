@model Validacija.Models.Racun
@{
    ViewBag.Title = "Izdavanje racuna";
    Html.EnableClientValidation(false);
}

!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IzdavanjeRacuna</title>
    <style>
        label {
            display: inline-block;
            width: 150px;
            margin: 5px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div>
            <label>Broj računa:</label>
            @Html.EditorFor(x=>x.BrojRacuna)
        </div>
        <div>
            <label>Datum:</label>
            @Html.EditorFor(x => x.Datum)
        </div>
        <div>
            <label>Zaposlenik:</label>
            @Html.EditorFor(x => x.Zaposlenik)
        </div>
        <div>
            <label>Kupac:</label>
            @Html.EditorFor(x => x.Kupac)
        </div>
        <div>
            <label>Cijena:</label>
            @Html.EditorFor(x => x.Cijena)
        </div>

        <input type="submit" value="Pošalji" />
    }
</body>
</html>

